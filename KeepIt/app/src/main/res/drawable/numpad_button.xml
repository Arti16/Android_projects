<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="@color/button_pressed"
                />
            <size
                android:width="60dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/button_pressed_border"
                />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="@color/button_pressed"
                />
            <size
                android:width="60dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/button_pressed_border"
                />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="@color/button_unpressed"
                />
            <size
                android:width="60dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/button_unpressed_border"
                />
        </shape>
    </item>
</selector>